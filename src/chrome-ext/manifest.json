{
  "manifest_version": 3,
  "name": "Mountaineers Assistant",
  "version": "0.4.8",
  "description": "Enhance your Mountaineers browsing experience with personalized activity insights.",
  "permissions": ["storage", "offscreen", "tabs"],
  "host_permissions": ["https://www.mountaineers.org/*"],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Mountaineers Assistant",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_ui": {
    "page": "preferences.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.mountaineers.org/members/*",
        "https://www.mountaineers.org/activities/*",
        "https://www.mountaineers.org/*/climb/*"
      ],
      "js": ["content-script.js"],
      "css": ["content-script.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "insights.html",
        "insights.js",
        "insights.css",
        "tailwind.css",
        "vendor/highcharts.js",
        "vendor/choices.min.js",
        "vendor/choices.min.css",
        "icons/icon16.png",
        "icons/icon48.png"
      ],
      "matches": ["https://www.mountaineers.org/*"]
    }
  ]
}
