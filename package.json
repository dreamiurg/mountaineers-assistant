{
  "name": "mountaineers-assistant",
  "version": "0.2.3",
  "description": "Chrome extension that surfaces Mountaineers activity insights directly in the browser.",
  "main": "src/chrome-ext/background.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "dev": "vite",
    "build": "npm run build:css && vite build",
    "preview": "vite preview",
    "build:css": "tailwindcss -i ./src/chrome-ext/styles/tailwind.input.css -o ./src/chrome-ext/tailwind.css --minify",
    "format": "biome format --write .",
    "lint": "biome check .",
    "typecheck": "tsc --noEmit",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "test": "npx tsx --test tests/unit/*.test.ts && npm run test:chrome-extension",
    "test:unit": "npx tsx --test tests/unit/*.test.ts",
    "test:dashboards": "node scripts/snapshot-dashboards.js",
    "test:chrome-extension": "playwright test --project=chromium-extension",
    "test:chrome-extension:update-snapshots": "playwright test --project=chromium-extension --update-snapshots",
    "screenshot:insights": "node scripts/generate-insights-screenshot.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dreamiurg/mountaineers-assistant.git"
  },
  "keywords": ["chrome-extension", "mountaineers", "hiking", "activities"],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/dreamiurg/mountaineers-assistant/issues"
  },
  "homepage": "https://github.com/dreamiurg/mountaineers-assistant#readme",
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@biomejs/biome": "2.2.6",
    "@playwright/test": "^1.56.0",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/react": "^8.6.14",
    "@storybook/react-webpack5": "^8.6.14",
    "@storybook/test": "^8.6.14",
    "@types/chrome": "^0.1.22",
    "@types/node": "^24.7.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.1",
    "@vitejs/plugin-react": "^5.0.4",
    "autoprefixer": "^10.4.21",
    "babel-loader": "^10.0.0",
    "http-server": "^14.1.1",
    "playwright": "^1.56.0",
    "postcss": "^8.5.6",
    "storybook": "^8.6.14",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.9.3",
    "vite": "^7.1.9",
    "vite-plugin-static-copy": "^3.1.3"
  },
  "private": true,
  "dependencies": {
    "choices.js": "^11.1.0",
    "highcharts": "^12.4.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  }
}
