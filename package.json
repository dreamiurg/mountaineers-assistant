{
  "name": "mountaineers-assistant",
  "version": "0.1.0",
  "description": "Chrome extension that surfaces Mountaineers activity insights directly in the browser.",
  "main": "src/chrome-ext/background.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "dev": "vite",
    "build": "npm run build:css && vite build",
    "preview": "vite preview",
    "build:css": "tailwindcss -i ./src/chrome-ext/styles/tailwind.input.css -o ./src/chrome-ext/tailwind.css --minify",
    "format": "prettier --write \"src/**/*.js\" \"src/**/*.ts\" \"src/**/*.html\" \"src/**/*.css\"",
    "lint": "prettier --check \"src/**/*.js\" \"src/**/*.ts\" \"src/**/*.html\" \"src/**/*.css\"",
    "typecheck": "tsc --noEmit",
    "test:dashboards": "node scripts/snapshot-dashboards.js",
    "dev:design": "http-server design -p 5500 --cors"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dreamiurg/mountaineers-assistant.git"
  },
  "keywords": [
    "chrome-extension",
    "mountaineers",
    "hiking",
    "activities"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/dreamiurg/mountaineers-assistant/issues"
  },
  "homepage": "https://github.com/dreamiurg/mountaineers-assistant#readme",
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.37.0",
    "@types/chrome": "^0.1.22",
    "@types/node": "^24.7.0",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.37.0",
    "globals": "^16.4.0",
    "http-server": "^14.1.1",
    "playwright": "^1.55.1",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.0",
    "vite": "^7.1.9",
    "vite-plugin-static-copy": "^3.1.3"
  },
  "private": true,
  "dependencies": {
    "choices.js": "^11.1.0",
    "highcharts": "^12.4.0"
  }
}
