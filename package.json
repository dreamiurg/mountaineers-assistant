{
  "name": "mountaineers-assistant",
  "version": "0.4.8",
  "description": "Chrome extension that surfaces Mountaineers activity insights directly in the browser.",
  "main": "src/chrome-ext/background.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "dev": "vite",
    "build": "bun run build:css && vite build",
    "preview": "vite preview",
    "build:css": "tailwindcss -i ./src/chrome-ext/styles/tailwind.input.css -o ./src/chrome-ext/tailwind.css --minify",
    "format": "biome format --write .",
    "lint": "biome check .",
    "typecheck": "tsc --noEmit",
    "check": "bun run typecheck && bun run lint",
    "test": "bun x tsx --test tests/unit/*.test.ts && bun run test:chrome-extension",
    "test:unit": "bun x tsx --test tests/unit/*.test.ts",
    "test:coverage": "npx c8 --reporter=text --reporter=lcov --check-coverage --lines=70 --functions=70 --branches=70 --statements=70 bun x tsx --test tests/unit/*.test.ts",
    "test:dashboards": "node scripts/snapshot-dashboards.js",
    "test:chrome-extension": "playwright test --project=chromium-extension",
    "test:chrome-extension:update-snapshots": "playwright test --project=chromium-extension --update-snapshots",
    "complexity": "lizard -l typescript -C 15 -L 60 -a 5 -x 'src/**/*.test.ts' -x 'tests/**' src/",
    "ci": "bun run check && bun run test:coverage && bun run complexity && bun run build",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "screenshot:insights": "node scripts/generate-insights-screenshot.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dreamiurg/mountaineers-assistant.git"
  },
  "keywords": ["chrome-extension", "mountaineers", "hiking", "activities"],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/dreamiurg/mountaineers-assistant/issues"
  },
  "homepage": "https://github.com/dreamiurg/mountaineers-assistant#readme",
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@biomejs/biome": "^2.3.12",
    "@playwright/test": "^1.57.0",
    "@storybook/addon-docs": "^10.2.0",
    "@storybook/react": "^10.2.0",
    "@storybook/react-webpack5": "^10.2.0",
    "@tailwindcss/cli": "^4.1.18",
    "@tailwindcss/vite": "^4.1.18",
    "@types/chrome": "^0.1.32",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "babel-loader": "^10.0.0",
    "c8": "^10.1.3",
    "playwright": "^1.57.0",
    "storybook": "^10.2.0",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vite-plugin-static-copy": "^3.1.4"
  },
  "private": true,
  "dependencies": {
    "choices.js": "^11.1.0",
    "highcharts": "^12.4.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  }
}
