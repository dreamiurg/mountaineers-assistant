{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "globals": {
    "chrome": "readonly"
  },
  "rules": {
    "no-console": "off"
  },
  "overrides": [
    {
      "files": ["*.config.js", "postcss.config.js", "tailwind.config.js"],
      "env": {
        "node": true
      }
    }
  ]
}
